# Application
NODE_ENV=development
PORT=3000

# CORS
CORS_ORIGIN=*

{{#if includeAuth}}
# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=1d
{{/if}}

{{#if hasPostgres}}
# PostgreSQL Database
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME={{name}}
DB_PASSWORD=password
DB_DATABASE={{name}}
DB_SYNCHRONIZE=true
{{/if}}

{{#if hasMySQL}}
# MySQL Database
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME={{name}}
DB_PASSWORD=password
DB_DATABASE={{name}}
DB_SYNCHRONIZE=true
{{/if}}

{{#if hasMongoDB}}
# MongoDB
MONGODB_URI=mongodb://localhost:27017/{{name}}
{{/if}}

{{#if hasRedis}}
# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
{{/if}}
